{% capture description %}Review of the track {{ title }}{% endcapture %}
{% include partials/header.liquid, title: title, description: description %}

<header>
  <h1>{{ index }}. {{ title }}</h1>
  <p>Duration : {% duration from to %}</p>
  <p>Movie timecode : {{ from }}</p>
  <p>Composer : {{ composer }}</p>

  {% if original_piece_title %}
    <p>
      From the original piece :
      <cite>{{ original_piece_title }}</cite> ({{original_piece_year}})
    </p>
  {% endif %}

  <p>Released : {{ released }}</p>
  <p>{{ released_details }}</p>

  {% if interest %}
    <p>Interest : {{ interestÂ }}</p>
  {% endif %}
</header>

{% trackImage movie, index, title %}

{{ comment }}

{% if trivia %}
  <aside>
    <header>Did you know?</header>
    {{ trivia }}
  </aside>
{% endif %}

{% assign previousTrack = collections.tracks | getPreviousCollectionItem: page %}
{% assign nextTrack = collections.tracks | getNextCollectionItem: page %}

{% if previousTrack.url and previousTrack.data.movie == movie %}
  Previous track :
  <a href="{{ previousTrack.url}}">{{ previousTrack.data.title }}</a>
{% endif %}

{% if nextTrack.url and nextTrack.data.movie == movie %}
  Next track :
  <a href="{{ nextTrack.url}}">{{ nextTrack.data.title }}</a>
{% endif %}

{% include partials/footer.liquid %}
